@model List<ResumeProjectDemo.Entities.Skils>

<section id="skills" class="bg-light">
    <div class="container">
        <div class="row mb-8">
            <div class="col-lg-10 col-xl-8 mx-lg-auto text-center">
                <div class="section-title h2 mb-3">
                    <h2 class="mb-0">Yeteneklerim - Teknolojiler</h2>
                    <span class="title-letter">Y</span>
                </div>
                <p>Teknik becerilerim ve kullandığım teknolojiler</p>
            </div>
        </div>
        
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var skill in Model)
                {
                    <div class="col-md-6 mb-6">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <p class="h6 mb-0">@skill.Title</p>
                            <span class="badge bg-primary">@skill.Percentage%</span>
                        </div>
                        <div class="progress rounded-0" style="height:5px">
                            <div class="progress-bar" role="progressbar" style="width: @skill.Percentage%" aria-valuenow="@skill.Percentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12 text-center py-5">
                    <p class="text-muted">Henüz yetenek eklenmemiş.</p>
                </div>
            </div>
        }
    </div>
</section>