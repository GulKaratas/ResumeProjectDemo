@model (ResumeProjectDemo.Entities.About about, List<ResumeProjectDemo.Entities.Experience> experiences)

<section id="about">
	<div class="container">
		<div class="section-title h2 text-center mb-8">
			<h2 class="mb-0">Hakkımda</h2>
			<span class="title-letter">G</span>
		</div>
		<div class="row">
			<div class="col-md-6 col-lg-4 d-none d-lg-block">
				<img class="img-fluid w-100 rounded" src="@Model.about.ImageUrl" alt="">
			</div>
			<div class="col-lg-8">
				<h3>@Model.about.NameSurname</h3>
				<p class="lead">@Model.about.Title</p>
				<p class="mb-5">@Model.about.Description</p>
				<div class="row mb-8">
					<div class="col-md-6 mb-5 mb-md-0">
						<h4 class="mb-4">Eğitim</h4>
						<p class="h5">Celal Bayar Üniversitesi</p>
						<p>Yazılım Mühedisliği , 2021 - 2025</p>
                        <br />
						<a href="/cv/GülKarataşCV..pdf" download="GülKarataşCV..pdf" class="btn btn-primary">Cv'mi İndirin</a>
						<a href="mailto:glsrnkarts@gmail.com"
						   class="btn btn-light scrollto">
							Bana Mail At
						</a>

					</div>

					<div class="col-md-6">
						<h4 class="mb-4">Deneyimlerim</h4>
						@foreach(var exp in Model.experiences)
						{
							<p class="h5">@exp.Title</p>
							<p>@exp.Description</p>
							@if(!string.IsNullOrEmpty(exp.WorkDate))
							{
								<p class="text-muted">@exp.WorkDate</p>
							}
						}
					</div>
				</div>
				
			</div>
		</div>
	</div>
</section>