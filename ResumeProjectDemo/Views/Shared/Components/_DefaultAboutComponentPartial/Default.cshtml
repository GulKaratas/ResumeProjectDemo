@model (ResumeProjectDemo.Entities.About about, List<ResumeProjectDemo.Entities.Experience> experiences)

<section id="about" class="about-section-modern">
	<div class="container">
		<div class="section-title-modern text-center mb-5">
			<span class="section-subtitle">BEN KİMİM?</span>
			<h2 class="section-main-title">Hakkımda</h2>
			<div class="title-underline"></div>
		</div>
		
		<div class="row g-4">
			<div class="col-lg-4">
				<div class="profile-card" data-aos="fade-right">
					<div class="profile-image-wrapper">
						<img class="profile-image" src="@Model.about.ImageUrl" alt="@Model.about.NameSurname">
						<div class="image-overlay"></div>
					</div>
					<div class="profile-content">
						<h3 class="profile-name">@Model.about.NameSurname</h3>
						<p class="profile-title">@Model.about.Title</p>
						<div class="profile-actions">
							
							<a href="/cv/GülKarataşCV..pdf" download="GülKarataşCV..pdf" class="btn-modern btn-primary-modern">Cv'mi İndirin</a>
							<a href="mailto:glsrnkarts@gmail.com" class="btn-modern btn-secondary-modern">
								<i class="fas fa-envelope me-2"></i>Mail Gönder
							</a>
						</div>
					</div>
				</div>
			</div>
			
			<div class="col-lg-8">
				<div class="info-card" data-aos="fade-left">
					<div class="about-description">
						<p>@Model.about.Description</p>
					</div>
				</div>
				
				<div class="row g-3 mt-2">
					<div class="col-md-6">
						<div class="education-card" data-aos="fade-up">
							<div class="card-header-modern">
								<i class="fas fa-graduation-cap me-2"></i>
								<h4>Eğitim</h4>
							</div>
							<div class="card-body-modern">
								<h5 class="institution-name">Celal Bayar Üniversitesi</h5>
								<p class="department">Yazılım Mühendisliği</p>
								<p class="date-range"><i class="far fa-calendar-alt me-2"></i>2021 - 2025</p>
							</div>
						</div>
					</div>
					
					<div class="col-md-6">
						<div class="experiences-card" data-aos="fade-up" data-aos-delay="100">
							<div class="card-header-modern">
								<i class="fas fa-briefcase me-2"></i>
								<h4>Deneyimlerim</h4>
							</div>
							<div class="card-body-modern experiences-scroll">
								@if(Model.experiences != null && Model.experiences.Any())
								{
									@for(int i = 0; i < Model.experiences.Count; i++)
									{
										var exp = Model.experiences[i];
										var shortDescription = exp.Description.Length > 150 ? exp.Description.Substring(0, 100) + "..." : exp.Description;
										var needsReadMore = exp.Description.Length > 150;
										
										<div class="experience-item-modern">
											<h6 class="exp-title">@exp.Title</h6>
											@if(!string.IsNullOrEmpty(exp.WorkDate))
											{
												<p class="exp-date"><i class="far fa-calendar-alt me-1"></i>@exp.WorkDate</p>
											}
											<p class="exp-desc exp-description-short-@i">@shortDescription</p>
											<p class="exp-desc exp-description-full-@i" style="display: none;">@exp.Description</p>
											
											@if(needsReadMore)
											{
												<button class="btn-read-more" onclick="toggleDescription(@i)">
													<span id="toggleText-@i">Devamını Oku</span>
													<i id="toggleIcon-@i" class="fas fa-chevron-down ms-1"></i>
												</button>
											}
											
											@if(i < Model.experiences.Count - 1)
											{
												<div class="exp-divider"></div>
											}
										</div>
									}
								}
								else
								{
									<p class="text-muted">Henüz deneyim bilgisi eklenmemiş.</p>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	function toggleDescription(index) {
		const shortDesc = document.querySelector('.exp-description-short-' + index);
		const fullDesc = document.querySelector('.exp-description-full-' + index);
		const toggleText = document.getElementById('toggleText-' + index);
		const toggleIcon = document.getElementById('toggleIcon-' + index);
		
		if (shortDesc.style.display === 'none') {
			shortDesc.style.display = 'block';
			fullDesc.style.display = 'none';
			toggleText.textContent = 'Devamını Oku';
			toggleIcon.className = 'fas fa-chevron-down ms-1';
		} else {
			shortDesc.style.display = 'none';
			fullDesc.style.display = 'block';
			fullDesc.style.animation = 'fadeIn 0.3s ease-in';
			toggleText.textContent = 'Daha Az Göster';
			toggleIcon.className = 'fas fa-chevron-up ms-1';
		}
	}
</script>

