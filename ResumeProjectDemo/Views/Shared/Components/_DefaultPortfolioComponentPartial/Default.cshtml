@model (List<ResumeProjectDemo.Entities.Category> categories, List<ResumeProjectDemo.Entities.Portfolio> portfolios)

<section id="portfolio" class="portfolio-section-modern">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-10 col-xl-8 mx-lg-auto text-center">
                <div class="section-title-modern mb-4">
                    <h2 class="display-4 fw-bold mb-3">Son Projelerim</h2>
                    <p class="lead text-muted">Geliştirdiğim web uygulamaları ve projeler</p>
                </div>
            </div>
        </div>

        <!-- Kategori Filtreleri -->
        <div class="filter-container text-center mb-5">
            <button class="filter-btn active" data-filter="all">
                <i class="fas fa-th"></i> Tümü <span class="badge">@Model.portfolios.Count</span>
            </button>
            @foreach (var category in Model.categories)
            {
                var count = Model.portfolios.Count(x => x.CategoryId == category.CategoryId);
                <button class="filter-btn" data-filter="@category.CategoryId">
                    <i class="fas fa-folder"></i> @category.CategoryName <span class="badge">@count</span>
                </button>
            }
        </div>

        <!-- Portfolio Grid -->
        <div class="row g-4" id="portfolioGrid">
            @foreach (var portfolio in Model.portfolios)
            {
                <div class="col-sm-6 col-lg-4 portfolio-item" data-category="@portfolio.CategoryId">
                    <div class="portfolio-card">
                        <div class="portfolio-img-wrapper">
                            <img src="@portfolio.ImageUrl" class="portfolio-img" alt="@portfolio.Title">
                            <div class="portfolio-overlay">
                                <div class="portfolio-overlay-content">
                                    <h5 class="text-white mb-2">@portfolio.Title</h5>
                                    <span class="category-badge">
                                        @portfolio.Category?.CategoryName
                                    </span>
                                    <div class="mt-3">
                                        <a href="#" class="btn-icon" title="Detay">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="#" class="btn-icon" title="Link">
                                            <i class="fas fa-link"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Daha Fazla Butonu (Her Zaman Görünür) -->
        <div class="text-center mt-5">
            <button id="loadMoreBtn" class="load-more-btn">
                <i class="fas fa-chevron-down"></i>
                <span class="btn-text">Daha Fazla Proje</span>
                <span class="btn-count">(@(Model.portfolios.Count > 6 ? Model.portfolios.Count - 6 : 0) proje daha)</span>
            </button>
        </div>

        <!-- Sonuç Mesajı -->
        <div id="noResult" class="text-center py-5" style="display: none;">
            <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
            <p class="text-muted">Bu kategoride proje bulunamadı.</p>
        </div>
    </div>
</section>

<style>
.portfolio-section-modern {
    padding: 100px 0;
    background: linear-gradient(to bottom, #f8f9fa 0%, #ffffff 100%);
}

/* Filtre Butonları */
.filter-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
    margin-bottom: 50px;
}

.filter-btn {
    background: white;
    border: 2px solid #e2e8f0;
    padding: 12px 28px;
    border-radius: 50px;
    font-weight: 600;
    color: #4a5568;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    position: relative;
    overflow: hidden;
}

.filter-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transform: translate(-50%, -50%);
    transition: width 0.4s, height 0.4s;
    z-index: 0;
}

.filter-btn:hover::before {
    width: 300px;
    height: 300px;
}

.filter-btn:hover {
    border-color: #667eea;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
}

.filter-btn > * {
    position: relative;
    z-index: 1;
}

.filter-btn.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: transparent;
    color: white;
    box-shadow: 0 8px 25px rgba(102,126,234,0.4);
}

.filter-btn .badge {
    background: rgba(255,255,255,0.25);
    padding: 3px 10px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 700;
}

/* Portfolio Card - Ultra Modern */
.portfolio-card {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    height: 100%;
    background: white;
}

.portfolio-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
    transform: rotate(45deg);
    transition: all 0.5s;
    z-index: 1;
}

.portfolio-card:hover::before {
    left: 100%;
}

.portfolio-card:hover {
    transform: translateY(-15px) scale(1.02);
    box-shadow: 0 20px 50px rgba(102, 126, 234, 0.25);
}

.portfolio-img-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    height: 280px;
    background: #f0f0f0;
}

.portfolio-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.portfolio-card:hover .portfolio-img {
    transform: scale(1.15) rotate(2deg);
}

/* Overlay - Glassmorphism */
.portfolio-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(102,126,234,0.97) 0%, rgba(118,75,162,0.97) 100%);
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.5s ease;
    z-index: 2;
}

.portfolio-card:hover .portfolio-overlay {
    opacity: 1;
}

.portfolio-overlay-content {
    text-align: center;
    padding: 25px;
    transform: translateY(30px) scale(0.9);
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.portfolio-card:hover .portfolio-overlay-content {
    transform: translateY(0) scale(1);
}

.portfolio-overlay-content h5 {
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 10px;
    text-shadow: 0 2px 10px rgba(0,0,0,0.2);
}

.category-badge {
    display: inline-block;
    background: rgba(255,255,255,0.25);
    padding: 6px 18px;
    border-radius: 25px;
    color: white;
    font-size: 0.85rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255,255,255,0.3);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.btn-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 45px;
    height: 45px;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    color: white;
    margin: 0 8px;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    backdrop-filter: blur(10px);
    text-decoration: none;
    border: 1px solid rgba(255,255,255,0.3);
}

.btn-icon:hover {
    background: white;
    color: #667eea;
    transform: scale(1.2) rotate(360deg);
    box-shadow: 0 5px 20px rgba(255,255,255,0.5);
}

/* Animasyonlar */
.portfolio-item {
    transition: all 0.4s ease;
}

.portfolio-item.hide {
    opacity: 0;
    transform: scale(0.8);
    display: none !important;
}

@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(40px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.portfolio-item.show {
    animation: fadeInUp 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.portfolio-hidden {
    display: none !important;
}

/* Load More Butonu - Premium */
.load-more-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    padding: 18px 45px;
    border-radius: 50px;
    color: white;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 8px 25px rgba(102,126,234,0.4);
    display: inline-flex;
    align-items: center;
    gap: 12px;
    position: relative;
    overflow: hidden;
}

.load-more-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.6s;
}

.load-more-btn:hover::before {
    left: 100%;
}

.load-more-btn:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 35px rgba(102,126,234,0.6);
}

.load-more-btn:active {
    transform: translateY(-2px);
}

.load-more-btn i {
    font-size: 1.2rem;
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.load-more-btn:hover i {
    transform: scale(1.3);
}

.load-more-btn.expanded i {
    transform: rotate(180deg);
}

.btn-count {
    font-size: 0.85rem;
    opacity: 0.85;
}

/* Responsive */
@@media (max-width: 768px) {
    .filter-btn {
        padding: 10px 20px;
        font-size: 0.9rem;
    }
    
    .portfolio-img-wrapper {
        height: 220px;
    }
    
    .load-more-btn {
        padding: 15px 35px;
        font-size: 0.95rem;
    }
    
    .portfolio-card:hover {
        transform: translateY(-8px) scale(1.01);
    }
}
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {

        const filterBtns = document.querySelectorAll('.filter-btn');
        const portfolioItems = document.querySelectorAll('.portfolio-item');
        const loadMoreBtn = document.getElementById('loadMoreBtn');
        const noResult = document.getElementById('noResult');

        let isExpanded = false;
        const LIMIT = 6;

        // === İlk yükleme: sadece 6 tane göster ===
        applyLimit();

        // === Filtreleme ===
        filterBtns.forEach(btn => {
            btn.addEventListener('click', function () {
                const filter = this.getAttribute('data-filter');

                filterBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                isExpanded = false;
                let visibleCount = 0;

                portfolioItems.forEach(item => {
                    const category = item.getAttribute('data-category');

                    if (filter === 'all' || category === filter) {
                        item.classList.remove('hide');
                        visibleCount++;
                    } else {
                        item.classList.add('hide');
                    }
                });

                applyLimit();
                noResult.style.display = visibleCount === 0 ? 'block' : 'none';
            });
        });

        // === Load More ===
        loadMoreBtn.addEventListener('click', function () {

            const visibleItems = getVisibleItems();

            if (visibleItems.length <= LIMIT) return; // 6 veya daha azsa hiçbir şey yapma

            isExpanded = !isExpanded;

            visibleItems.forEach((item, index) => {
                if (isExpanded) {
                    item.classList.remove('portfolio-hidden');
                    item.classList.add('show');
                } else {
                    if (index >= LIMIT) {
                        item.classList.add('portfolio-hidden');
                    }
                }
            });

            updateButtonText();
        });

        // === Yardımcı Fonksiyonlar ===

        function applyLimit() {
            const visibleItems = getVisibleItems();

            visibleItems.forEach((item, index) => {
                if (!isExpanded && index >= LIMIT) {
                    item.classList.add('portfolio-hidden');
                } else {
                    item.classList.remove('portfolio-hidden');
                    item.classList.add('show');
                }
            });

            updateButtonText();
        }

        function getVisibleItems() {
            return Array.from(portfolioItems).filter(item => !item.classList.contains('hide'));
        }

        function updateButtonText() {
            const visibleItems = getVisibleItems();

            if (visibleItems.length <= LIMIT) {
                loadMoreBtn.innerHTML = `
                    <i class="fas fa-chevron-down"></i>
                    <span class="btn-text">Tüm Projeler</span>
                `;
                return;
            }

            loadMoreBtn.innerHTML = isExpanded
                ? `<i class="fas fa-chevron-up"></i><span class="btn-text">Daha Az Göster</span>`
                : `<i class="fas fa-chevron-down"></i><span class="btn-text">Daha Fazla Proje</span>`;
        }

    });
</script>
