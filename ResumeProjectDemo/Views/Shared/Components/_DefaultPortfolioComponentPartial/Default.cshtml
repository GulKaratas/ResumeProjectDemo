@model (List<ResumeProjectDemo.Entities.Category> categories, List<ResumeProjectDemo.Entities.Portfolio> portfolios)

<section id="portfolio" class="py-5 mb-5 pb-5">
    <div class="container">
        <div class="section-title text-center mb-5">
            <h2 class="mb-3 fw-bold">Projelerim</h2>
            <p class="text-muted">Geliştirdiğim projeler ve çalışmalar</p>
        </div>

        <!-- Kategori Filtreleri -->
        <div class="filter-container text-center mb-5">
            <button class="filter-btn active" data-filter="all">
                <i class="fas fa-th"></i> Tümü <span class="badge">@Model.portfolios.Count</span>
            </button>
            @foreach (var category in Model.categories)
            {
                var count = Model.portfolios.Count(x => x.CategoryId == category.CategoryId);
                <button class="filter-btn" data-filter="@category.CategoryId">
                    <i class="fas fa-folder"></i> @category.CategoryName <span class="badge">@count</span>
                </button>
            }
        </div>

        <!-- Portfolio Grid -->
        <div class="row g-4" id="portfolioGrid">
            @foreach (var portfolio in Model.portfolios)
            {
                <div class="col-sm-6 col-lg-4 portfolio-item" data-category="@portfolio.CategoryId">
                    <div class="portfolio-card">
                        <div class="portfolio-img-wrapper">
                            <img src="@portfolio.ImageUrl" class="portfolio-img" alt="@portfolio.Title">
                            <div class="portfolio-overlay">
                                <div class="portfolio-overlay-content">
                                    <h5 class="text-white mb-2">@portfolio.Title</h5>
                                    <span class="category-badge">
                                        @portfolio.Category?.CategoryName
                                    </span>
                                    <div class="mt-3">
                                        <a href="#" class="btn-icon" title="Detay">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="#" class="btn-icon" title="Link">
                                            <i class="fas fa-link"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Daha Fazla Butonu (Her Zaman Görünür) -->
        <div class="text-center mt-5">
            <button id="loadMoreBtn" class="load-more-btn">
                <i class="fas fa-chevron-down"></i>
                <span class="btn-text">Daha Fazla Proje</span>
                <span class="btn-count">(@(Model.portfolios.Count > 6 ? Model.portfolios.Count - 6 : 0) proje daha)</span>
            </button>
        </div>

        <!-- Sonuç Mesajı -->
        <div id="noResult" class="text-center py-5" style="display: none;">
            <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
            <p class="text-muted">Bu kategoride proje bulunamadı.</p>
        </div>
    </div>
</section>

<style>
    /* Filtre Butonları */
    .filter-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
    }

    .filter-btn {
        background: #fff;
        border: 2px solid #e0e0e0;
        padding: 12px 24px;
        border-radius: 50px;
        font-weight: 500;
        color: #555;
        transition: all 0.3s ease;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

        .filter-btn:hover {
            border-color: #007bff;
            color: #007bff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0,123,255,0.2);
        }

        .filter-btn.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-color: #667eea;
            color: white;
            box-shadow: 0 4px 15px rgba(102,126,234,0.4);
        }

        .filter-btn .badge {
            background: rgba(255,255,255,0.2);
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 11px;
        }

        .filter-btn.active .badge {
            background: rgba(255,255,255,0.3);
        }

    /* Portfolio Card */
    .portfolio-card {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        transition: all 0.4s ease;
        height: 100%;
    }

        .portfolio-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

    .portfolio-img-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        height: 260px;
    }

    .portfolio-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    transform: scale(1.1);
    .portfolio-card:hover .portfolio-img {
    }

    /* Overlay */
    .portfolio-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102,126,234,0.95) 0%, rgba(118,75,162,0.95) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .portfolio-card:hover .portfolio-overlay {
        opacity: 1;
    }

    .portfolio-overlay-content {
        text-align: center;
        padding: 20px;
        transform: translateY(20px);
        transition: transform 0.4s ease;
    }

    .portfolio-card:hover .portfolio-overlay-content {
        transform: translateY(0);
    }

    .category-badge {
        display: inline-block;
        background: rgba(255,255,255,0.2);
        padding: 5px 15px;
        border-radius: 20px;
        color: white;
        font-size: 12px;
        font-weight: 500;
        backdrop-filter: blur(10px);
    }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        color: white;
        margin: 0 5px;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        text-decoration: none;
    }

        .btn-icon:hover {
            background: white;
            color: #667eea;
            transform: scale(1.1);
        }

    /* Animasyonlar */
    .portfolio-item {
        transition: all 0.4s ease;
    }

        .portfolio-item.hide {
            opacity: 0;
            transform: scale(0.8);
            display: none !important;
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .portfolio-item.show {
        animation: fadeInUp 0.5s ease;
    }

    /* Gizli Projeler */
    .portfolio-hidden {
        display: none !important;
    }

    /* Load More Butonu */
    .load-more-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 15px 40px;
        border-radius: 50px;
        color: white;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102,126,234,0.4);
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .load-more-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(102,126,234,0.6);
    }

    .load-more-btn i {
        font-size: 20px;
        transition: transform 0.3s ease;
    }

    .load-more-btn:hover i {
        transform: scale(1.2);
    }

    .load-more-btn.expanded i {
        transform: rotate(180deg);
    }

    .btn-count {
        font-size: 13px;
        opacity: 0.9;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .filter-btn {
            padding: 10px 18px;
            font-size: 14px;
        }

        .portfolio-img-wrapper {
            height: 220px;
        }

        .load-more-btn {
            padding: 12px 30px;
            font-size: 14px;
        }
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {

        const filterBtns = document.querySelectorAll('.filter-btn');
        const portfolioItems = document.querySelectorAll('.portfolio-item');
        const loadMoreBtn = document.getElementById('loadMoreBtn');
        const noResult = document.getElementById('noResult');

        let isExpanded = false;
        const LIMIT = 6;

        // === İlk yükleme: sadece 6 tane göster ===
        applyLimit();

        // === Filtreleme ===
        filterBtns.forEach(btn => {
            btn.addEventListener('click', function () {
                const filter = this.getAttribute('data-filter');

                filterBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                isExpanded = false;
                let visibleCount = 0;

                portfolioItems.forEach(item => {
                    const category = item.getAttribute('data-category');

                    if (filter === 'all' || category === filter) {
                        item.classList.remove('hide');
                        visibleCount++;
                    } else {
                        item.classList.add('hide');
                    }
                });

                applyLimit();
                noResult.style.display = visibleCount === 0 ? 'block' : 'none';
            });
        });

        // === Load More ===
        loadMoreBtn.addEventListener('click', function () {

            const visibleItems = getVisibleItems();

            if (visibleItems.length <= LIMIT) return; // 6 veya daha azsa hiçbir şey yapma

            isExpanded = !isExpanded;

            visibleItems.forEach((item, index) => {
                if (isExpanded) {
                    item.classList.remove('portfolio-hidden');
                    item.classList.add('show');
                } else {
                    if (index >= LIMIT) {
                        item.classList.add('portfolio-hidden');
                    }
                }
            });

            updateButtonText();
        });

        // === Yardımcı Fonksiyonlar ===

        function applyLimit() {
            const visibleItems = getVisibleItems();

            visibleItems.forEach((item, index) => {
                if (!isExpanded && index >= LIMIT) {
                    item.classList.add('portfolio-hidden');
                } else {
                    item.classList.remove('portfolio-hidden');
                    item.classList.add('show');
                }
            });

            updateButtonText();
        }

        function getVisibleItems() {
            return Array.from(portfolioItems).filter(item => !item.classList.contains('hide'));
        }

        function updateButtonText() {
            const visibleItems = getVisibleItems();

            if (visibleItems.length <= LIMIT) {
                loadMoreBtn.innerHTML = `
                    <i class="fas fa-chevron-down"></i>
                    <span class="btn-text">Tüm Projeler</span>
                `;
                return;
            }

            loadMoreBtn.innerHTML = isExpanded
                ? `<i class="fas fa-chevron-up"></i><span class="btn-text">Daha Az Göster</span>`
                : `<i class="fas fa-chevron-down"></i><span class="btn-text">Daha Fazla Proje</span>`;
        }

    });
</script>
