@model List<ResumeProjectDemo.Entities.Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    ViewData["ActivePage"] = "Portfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-slate-300 antialiased min-h-screen">
    <div class="flex flex-col min-h-screen">
        <main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-10">
                <div class="space-y-1">
                    <h1 class="text-3xl font-black text-slate-900 dark:text-white tracking-tight">Projelerim</h1>
                    <p class="text-slate-500 dark:text-slate-400 text-base">Projelerinizi görüntüleyebilir, düzenleyebilir veya silebilirsiniz</p>
                </div>
                <a asp-controller="Portfolio" asp-action="CreatePortfolio"
                   class="glow-button bg-gradient-to-r from-primary to-blue-600 hover:to-blue-500 text-white px-6 py-3 rounded-xl font-bold text-sm inline-flex items-center gap-2 transition-all transform hover:-translate-y-0.5">
                    <span class="material-symbols-outlined">add_circle</span>
                    Yeni Proje Ekle
                </a>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var item in Model)
                {
                    <div class="card-zoom group bg-white dark:bg-slate-800/80 border border-slate-200 dark:border-slate-700/50 rounded-xl overflow-hidden shadow-xl transition-all hover:shadow-2xl hover:bg-slate-700/80">
                        <div class="relative h-56 overflow-hidden">
                            <img class="zoom-image w-full h-full object-cover transition-transform duration-500"
                                 src="@item.ImageUrl"
                                 alt="@item.Title" />
                            <div class="absolute top-4 right-4">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-primary/90 text-white backdrop-blur-md shadow-lg">
                                    @item.Category
                                </span>
                            </div>
                        </div>
                        <div class="p-6">
                            <div class="flex justify-between items-start mb-2">
                                <span class="text-xs font-mono text-slate-500">ID: @item.PortfolioId</span>
                               
                            </div>
                            <h3 class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-4 line-clamp-1">
                                @item.Title
                            </h3>
                            <div class="pt-4 mt-2 border-t border-slate-100 dark:border-slate-700/50 flex items-center justify-between">
                                <form asp-controller="Portfolio" asp-action="UpdatePortfolio" asp-route-id="@item.PortfolioId"
                                      method="get"
                                      style="display:inline;">
                                    <button type="submit"
                                            class="inline-flex items-center gap-1.5 px-4 py-2 text-emerald-500 hover:bg-emerald-500/10 rounded-lg text-sm font-bold transition-all group/btn">
                                        <span class="material-symbols-outlined text-xl">edit_square</span>
                                        Güncelle
                                    </button>
                                </form>

                                <form asp-controller="Portfolio" asp-action="DeletePortfolio" asp-route-id="@item.PortfolioId"
                                      method="post"
                                      onsubmit="return confirm('Bu projeyi silmek istediğinize emin misiniz?')"
                                      style="display:inline;">
                                    <button type="submit"
                                            class="inline-flex items-center gap-1.5 px-4 py-2 text-red-500 hover:bg-red-500/10 rounded-lg text-sm font-bold transition-all group/btn">
                                        <span class="material-symbols-outlined text-xl">delete</span>
                                        Sil
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-12 px-6 py-4 flex flex-col sm:flex-row items-center justify-between bg-white dark:bg-slate-800/50 border border-slate-200 dark:border-slate-800 rounded-xl shadow-sm gap-4">
                <div class="text-sm text-slate-500 dark:text-slate-400">
                    Toplam <span class="font-bold text-slate-900 dark:text-white">@Model.Count</span> proje gösteriliyor
                </div>
            </div>
        </main>
    </div>
</body>