@model List<ResumeProjectDemo.Entities.Message>
@{
    ViewData["Title"] = "MessageList";
    ViewData["ActivePage"] = "Message";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-white min-h-screen">
    <main class="max-w-[1400px] mx-auto px-4 py-8">

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div id="successAlert" class="glass-card mb-6 p-4 rounded-xl bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-700 flex items-center gap-3 animate-slideDown">
                <span class="material-symbols-outlined text-green-600 dark:text-green-400 text-2xl">check_circle</span>
                <p class="text-green-800 dark:text-green-300 font-medium">@TempData["Success"]</p>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div id="errorAlert" class="glass-card mb-6 p-4 rounded-xl bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-700 flex items-center gap-3 animate-slideDown">
                <span class="material-symbols-outlined text-red-600 dark:text-red-400 text-2xl">error</span>
                <p class="text-red-800 dark:text-red-300 font-medium">@TempData["Error"]</p>
            </div>
        }

        <!-- Page Header -->
        <div class="flex flex-wrap justify-between items-end gap-4 mb-8">
            <div class="flex flex-col gap-2">
                <p class="text-slate-900 dark:text-white text-4xl font-black leading-tight tracking-[-0.033em]">
                    Gelen Mesajlar
                </p>
                <p class="text-slate-500 dark:text-[#92c0c9] text-base font-normal leading-normal">
                    Portfolyo formundan gelen mesajları buradan yönetin
                </p>
            </div>
            <div class="flex gap-3 items-center">
                <div class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800">
                    <span class="material-symbols-outlined text-blue-600 dark:text-blue-400 text-xl">info</span>
                    <span class="text-sm font-medium text-blue-800 dark:text-blue-300">
                        Toplam: <strong>@Model.Count</strong> mesaj
                    </span>
                </div>
                <div class="flex items-center gap-2 px-4 py-2 rounded-lg bg-orange-50 dark:bg-orange-900/20 border border-orange-200 dark:border-orange-800">
                    <span class="material-symbols-outlined text-orange-600 dark:text-orange-400 text-xl">mark_email_unread</span>
                    <span class="text-sm font-medium text-orange-800 dark:text-orange-300">
                        Okunmamış: <strong>@Model.Count(m => !m.IsRead)</strong>
                    </span>
                </div>
            </div>
        </div>

        <!-- Messages List -->
        <div class="space-y-4">
            @if (Model != null && Model.Any())
            {
                @foreach (var message in Model)
                {
                    <div class="glass-card rounded-xl p-6 hover:shadow-2xl transition-all duration-300 @(!message.IsRead ? "border-l-4 border-primary" : "")">
                        <div class="flex flex-col lg:flex-row gap-6">
                            
                            <!-- Left: Sender Info -->
                            <div class="lg:w-64 flex-shrink-0">
                                <div class="flex items-start gap-4">
                                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-primary/70 flex items-center justify-center text-white font-bold text-lg flex-shrink-0">
                                        @message.NameSurname.Substring(0, 1).ToUpper()
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h3 class="font-bold text-slate-900 dark:text-white mb-1 truncate">
                                            @message.NameSurname
                                        </h3>
                                        <p class="text-sm text-slate-600 dark:text-slate-400 mb-2 truncate">
                                            <span class="material-symbols-outlined text-[14px] align-middle mr-1">mail</span>
                                            @message.EmailAddress
                                        </p>
                                        <div class="flex items-center gap-2 text-xs text-slate-500 dark:text-slate-500">
                                            <span class="material-symbols-outlined text-[14px]">schedule</span>
                                            @message.SendDate.ToString("dd MMM yyyy, HH:mm")
                                        </div>
                                    </div>
                                </div>

                                <!-- Status Badge -->
                                <div class="mt-4">
                                    @if (message.IsRead)
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-semibold bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 border border-green-200 dark:border-green-800">
                                            <span class="material-symbols-outlined text-[14px]">done_all</span>
                                            Okundu
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-semibold bg-orange-100 dark:bg-orange-900/30 text-orange-700 dark:text-orange-400 border border-orange-200 dark:border-orange-800">
                                            <span class="material-symbols-outlined text-[14px]">mark_email_unread</span>
                                            Okunmadı
                                        </span>
                                    }
                                </div>
                            </div>

                            <!-- Middle: Message Content -->
                            <div class="flex-1 min-w-0">
                                <div class="mb-3">
                                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg text-xs font-semibold bg-primary/10 text-primary">
                                        <span class="material-symbols-outlined text-[14px]">label</span>
                                        Konu
                                    </span>
                                </div>
                                <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-3">
                                    @message.Subject
                                </h4>
                                <div class="prose prose-sm dark:prose-invert max-w-none">
                                    <p class="text-slate-600 dark:text-slate-400 leading-relaxed whitespace-pre-wrap">@message.MessageDetail</p>
                                </div>
                            </div>

                            <!-- Right: Actions -->
                            <div class="lg:w-32 flex-shrink-0 flex lg:flex-col gap-2 justify-end lg:justify-start">
                                @if (!message.IsRead)
                                {
                                    <form asp-controller="Message" asp-action="MarkAsRead" method="post" class="flex-1 lg:flex-none">
                                        <input type="hidden" name="id" value="@message.MessageId" />
                                        <button type="submit"
                                                class="w-full flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 bg-green-500/10 hover:bg-green-500 text-green-600 hover:text-white border border-green-500/30 font-semibold text-sm transition-all duration-300 hover:shadow-lg hover:shadow-green-500/30">
                                            <span class="material-symbols-outlined text-[18px]">done</span>
                                            <span class="hidden lg:inline">Okundu</span>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="Message" asp-action="MarkAsUnread" method="post" class="flex-1 lg:flex-none">
                                        <input type="hidden" name="id" value="@message.MessageId" />
                                        <button type="submit"
                                                class="w-full flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 bg-orange-500/10 hover:bg-orange-500 text-orange-600 hover:text-white border border-orange-500/30 font-semibold text-sm transition-all duration-300 hover:shadow-lg hover:shadow-orange-500/30">
                                            <span class="material-symbols-outlined text-[18px]">mark_email_unread</span>
                                            <span class="hidden lg:inline">Okunmadı</span>
                                        </button>
                                    </form>
                                }

                                <form asp-controller="Message" asp-action="DeleteMessage" method="post" 
                                      onsubmit="return confirm('Bu mesajı silmek istediğinize emin misiniz?')" 
                                      class="flex-1 lg:flex-none">
                                    <input type="hidden" name="id" value="@message.MessageId" />
                                    <button type="submit"
                                            class="w-full flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 bg-red-500/10 hover:bg-red-500 text-red-600 hover:text-white border border-red-500/30 font-semibold text-sm transition-all duration-300 hover:shadow-lg hover:shadow-red-500/30">
                                        <span class="material-symbols-outlined text-[18px]">delete</span>
                                        <span class="hidden lg:inline">Sil</span>
                                    </button>
                                </form>
                            </div>

                        </div>

                        <!-- Message ID Badge -->
                        <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-700">
                            <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-semibold bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400">
                                <span class="material-symbols-outlined text-[14px]">tag</span>
                                ID: @message.MessageId
                            </span>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Empty State -->
                <div class="glass-card rounded-xl p-16 text-center">
                    <div class="w-24 h-24 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-6">
                        <span class="material-symbols-outlined text-6xl text-primary">mail</span>
                    </div>
                    <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">
                        Henüz mesaj yok
                    </h3>
                    <p class="text-slate-500 dark:text-slate-400">
                        Portfolio formundan gelen mesajlar burada görünecek
                    </p>
                </div>
            }
        </div>

    </main>
</body>

<style>
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-slideDown {
        animation: slideDown 0.3s ease-out;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .dark .glass-card {
        background: rgba(30, 41, 59, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Prose styles for message content */
    .prose p {
        margin: 0;
    }
</style>
